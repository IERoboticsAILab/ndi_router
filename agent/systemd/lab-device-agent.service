[Unit]
Description=Lab Device Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/lab-device-agent
Environment=PYTHONPATH=.
ExecStart=/home/pi/lab-device-agent/.venv/bin/python -m device.agent
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
